#!/bin/bash

pickup_defaults
pickup_options

# If an administrator wishes to rely on modules.conf, let's agree.
if [ -n "$MODULE" ]; then
	for oneword in $MODULE; do
		$MODPROBE $oneword
	done
else
	$IP link set dev $NAME down
fi

# Don't return error to ifup on missing ethtool binary
if [ -x "${ETHTOOL:=$DEFAULT_ETHTOOL}" ]; then
	xargise_file $MYIFACEDIR/ethtool "$ETHTOOL -s $NAME"
else
	exit 0
fi
