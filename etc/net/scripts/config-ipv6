#!/bin/sh

. /etc/init.d/functions
SourceIfNotEmpty $SCRIPTDIR/functions

$MODPROBE ipv6

[ -s $MYIFACEDIR/ipv6address ] && cat $MYIFACEDIR/ipv6address | \
xargs --max-lines=1 $IP -6 address add dev $NAME

iface_is_up $NAME && [ -s $MYIFACEDIR/ipv6route ] && \
cat $MYIFACEDIR/ipv6route | xargs --max-lines=1 $IP -6 route append dev $NAME
