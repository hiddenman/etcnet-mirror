#!/bin/bash

# This script is intended to be run from command-line or etcnet
# initscript. It determines if the iface should be created, then
# creates the device and calls ifup-common to do the rest.
# Removable ifaces should be controlled via hotplug and pcmcia_cs,
# which will deal with ifup-removable.

usage()
{
	echo "Usage: $0 <interface>" > /dev/stderr
	exit 1
}

[ -z "$1" ] && usage
NAME=$1

. ${SCRIPTDIR:=/etc/net/scripts}/functions
if [ -d $IFACEDIR/$NAME@$NETHOST ]; then
	MYIFACEDIR=$IFACEDIR/$NAME@$NETHOST
else
	MYIFACEDIR=$IFACEDIR/$NAME
fi

[ -d "$MYIFACEDIR" ] || {
	print_error "interface configuration directory '$MYIFACEDIR' not found"
	exit 1
}
export IFACEDIR MYIFACEDIR SCRIPTDIR NAME NETPROFILE SEEN_IFACES

init_netprofile
pickup_options

# 1. check constraints
is_yes "$DISABLED" && {
	print_message -n " '$NAME' is disabled"
  exit 2
}

if [ "$2" = "boot" ]; then
	is_no "$ONBOOT" && {
		print_message -n ' on boot '
	  exit 2
	}
	is_yes "$USE_HOTPLUG" && {
		print_message -n " hotplug iface '$NAME' on boot "
	  exit 2
	}
	is_yes "$USE_PCMCIA" && {
		print_message -n " PCMCIA iface '$NAME' on boot "
	  exit 2
	}
fi

# 2. check if device already exists
iface_is_up $NAME && {
	print_message -n " '$NAME' is already up "
	exit 2
}

# 3a. avoid cycles
seen_iface $NAME && exit 0
add_seen_iface $NAME

# 3b. deps control
if is_yes "$IFUP_PARENTS"; then
	ifup_parents || {
		print_error "Could not ifup dependency for interface '$NAME'"
		exit 1
	}
fi

# 3c. exec scripts
ExecIfExecutable $SCRIPTDIR/ifup-pre-local $NAME && print_progress
ExecIfExecutable $MYIFACEDIR/ifup-pre $NAME && print_progress

# 4. make device appear
if ExecIfExecutable $SCRIPTDIR/create-$TYPE $NAME; then
	print_progress
else
	print_progress '!'
	exit 1
fi

# We can't be sure that our interface is called $NAME at the moment :(
#wait_for_macaddr $NAME

# 5. configure iface
IFTAB_FILE=`profiled_filename $IFTAB`
[ -s "$IFTAB_FILE" ] && $IFRENAME -c "$IFTAB_FILE" -n "$NAME" >/dev/null 2>&1 && print_progress
! is_yes "$USE_IFPLUGD" && $SCRIPTDIR/ifup-common $NAME
